\setbeamercolor{palette primary}{%
    fg=Black,
    bg=White
}
\setbeamercolor{background canvas}{bg=White}
\setbeamercolor{normal text}{fg=Black}

\setbeamercolor{structure}{fg=Blue2}
\setbeamercolor{frame title}{fg=Blue1, bg=White}

\setbeamercolor{alerted text}{use=structure, fg=structure.fg}
\setbeamercolor{example text}{fg=Green3}

% Table of Contents -----------------------------------------------------------
\setbeamercolor{section in toc}{parent=structure}
\setbeamercolor{section in toc shaded}{parent=section in toc, fg=Black}
\setbeamercolor{subsection in toc}{fg=Black}
\setbeamercolor{subsection in toc shaded}{parent=subsection in toc}
\setbeamercolor{subsubsection in toc}{fg=Black}
\setbeamercolor{subsubsection in toc shaded}{parent=subsubsection in toc}

