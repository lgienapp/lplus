%---------------------------------------------------------------------
% Package Options
%---------------------------------------------------------------------
\newif\if@doSectionPage
\@doSectionPagefalse
\DeclareOption{nosectionpages}{\@doSectionPagetrue}
%
\newif\if@doSubsectionPage
\@doSubsectionPagefalse
\DeclareOption{nosubsectionpages}{
    \@doSectionPagetrue
    \@doSubsectionPagetrue
}
%
\newif\if@doDarkMode
\@doDarkModefalse
\DeclareOption{darkmode}{\@doDarkModetrue}
%
\newif\if@doTrueWhite
\@doTrueWhitefalse
\DeclareOption{truewhite}{\@doTrueWhitetrue}
%
\newif\if@doColorBlocks
\@doColorBlocksfalse
\DeclareOption{colorblocks}{\@doColorBlockstrue}

%
\ProcessOptions

%---------------------------------------------------------------------
% Subthemes
%---------------------------------------------------------------------
\useinnertheme{lplus}
\useoutertheme{lplus}
\usecolortheme{lplus}
\usefonttheme{lplus}
